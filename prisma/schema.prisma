datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id            Int             @id @default(autoincrement())
  name          String          @db.VarChar(45)
  image         String?         @db.VarChar(45)
  amount        Int
  type          String?         @db.VarChar(45)
  size          Float?          @db.Float
  color         String?         @db.VarChar(45)
  category      String          @db.VarChar(45)
  sales_price   Float           @db.Float
  created_at    DateTime        @default(now()) 
  updated_at    DateTime        @updatedAt @db.Timestamp()
  shoppingItens ShoppingItens[]
  salesItens    SalesItens[]
}

model Shopping {
  id             Int             @id @default(autoincrement())
  total_value    Float           @db.Float
  shopping_date  DateTime        @db.Timestamp()
  payment_method String?         @db.VarChar(45)
  installment    Int?
  itens          ShoppingItens[]
}

model ShoppingItens {
  id         Int   @id @default(autoincrement())
  shoppingId Int
  productId  Int
  amount     Int
  unit_price Float @db.Float
  sub_total  Float @db.Float

  shopping Shopping @relation(fields: [shoppingId], references: [id])
  product  Product  @relation(fields: [productId], references: [id])

  @@unique([shoppingId, productId])
}

model Sales {
  id             Int          @id @default(autoincrement())
  client         String?      @db.VarChar(45)
  total_value    Float        @db.Float
  payment_method String?      @db.VarChar(45)
  coast          Float        @db.Float
  sales_date     DateTime     @db.Timestamp()
  itens          SalesItens[]
}

model SalesItens {
  id         Int   @id @default(autoincrement())
  salesId    Int
  productId  Int
  amount     Int
  unit_price Float @db.Float
  sub_total  Float @db.Float

  sales   Sales   @relation(fields: [salesId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([salesId, productId])
}
